<%- model_class = Count -%>
<div id="show-count-page-container">
  <div id="dark-container">
    <div class="row-fluid">
      <div id="form-container" class="span4 offset5" style="margin-top:125px">

        <h1>Count</h1>

        <div style="margin-top:25px">
          <strong><%= model_class.human_attribute_name(:activity_id) %>:</strong>
          <%= @count.activity_id %>
        </div>

        <div style="margin-top:25px">
          <strong><%= model_class.human_attribute_name(:date) %>:</strong>
          <%= @count.date.strftime('%b-%d-%Y %l:%M %p') %>
        </div>

        <div style="margin-top:50px">
          <%= link_to t('.back', :default => t("helpers.links.back")),
          counts_path, :class => 'btn'  %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_count_path(@count), :class => 'btn' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
          count_path(@count),
          :method => 'delete',
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
