<!DOCTYPE html>
<html>
<head>
  <link href='http://fonts.googleapis.com/css?family=Roboto:400,300' rel='stylesheet' type='text/css'>
  <title>LifeTapper</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<%= nav_bar :fixed => :top, :brand => "LifeTapper", :brand_link => root_url do %>
    <%= menu_group do %>
        <% if current_user %>
            <%= menu_item "Your Activities", activities_path %>
        <% end %>
    <% end %>

    <%= menu_group :pull => :right do %>
        <% if current_user %>
        <%= menu_item "New Activity", new_activity_path %>
            <%= menu_item "Log out", destroy_user_session_path, method: :delete %>
        <% else %>
            <%= menu_item "Sign up", new_user_registration_path %>
            <%= menu_item "Log in", new_user_session_path %>
        <% end %>
    <% end %>
<% end %>

  <% if notice %>
  <p class="alert alert-notice"><%= notice %></p>
  <% end %>
  <% if alert %>
  <p class="alert alert-error"><%= alert %></p>
  <% end %>

<body style="padding-top:30px">
  <%= yield %>
</body>
</html>
