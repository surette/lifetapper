<%- model_class = Session -%>
<div id="show-session-page-container">
  <div id="dark-container">
    <div class="row-fluid">
      <div id="form-container" class="span4 offset5" style="margin-top:125px">
        <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>

        <div style="margin-top:25px">
          <strong><%= model_class.human_attribute_name(:activity_id) %>:</strong>
          <%= @session.activity_id %>
        </div>
        <div style="margin-top:25px">
          <strong><%= model_class.human_attribute_name(:start_date) %>:</strong>
          <%= @session.start_date.strftime('%b-%d-%Y %l:%M %p')  %>
        </div>
        <div style="margin-top:25px; margin-bottom:50px">
          <strong><%= model_class.human_attribute_name(:end_date) %>:</strong>
          <%= @session.end_date.strftime('%b-%d-%Y %l:%M %p')  %>
        </div>

        <%= link_to t('.back', :default => t("helpers.links.back")),
        @session.activity, :class => 'btn'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
        edit_session_path(@session), :class => 'btn' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
        session_path(@session),
        :method => 'delete',
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
